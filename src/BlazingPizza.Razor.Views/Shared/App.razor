<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="main">
                        <div>
                            Se requiere autorizacion para acceder a este recurso
                        </div>
                        <LoginComponent />
                    </div>
                </NotAuthorized>
                <Authorizing>
                    <div class="main">
                        <p>
                            Autorizando ....
                        </p>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />            
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p class="mt-5 has-text-centered">Lo lamentamos, el recurso solicitado no ha sido encontrado.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>